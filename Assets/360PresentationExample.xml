<?xml version="1.0" encoding="utf-8" ?>

<presentation360>
  <head>
    <!--
    r - distance from sphere center
    theta - vertical polar coordinate in degrees (positive is to down direction)
    phi - horizontal polar coordinate in degrees (positive is to right direction)
    
    default values if not specified: r=0, theta=0, phi=0, duration=1
    -->
    <movementBase>
      <!--linear movement: attributes define where media will be placed in the end of the movement
        and a linear interpolation is performed for defining the media position during the movement
          circular movement: attributes define how much the media will move
      -->
      <movement id="linear1" type ="linear" r="15" duration="6"/>
      <movement id="circular1" type ="circular" phi="720" duration="10"/>
    </movementBase>

    <positionBase>
      <position id="center60esq" r="30" phi="-60"/>
      <position id="center30esq" r="30" phi="-30"/>

      <position id="center60esqUP" r="15" phi="-60" theta="10"/>
      <position id="center30esqUP" r="15" phi="-30" theta="10"/>

      <position id="pos_image_sound" r="15" theta="-30"/>
      <position id="center30" r="4" phi="30"/>
      <position id="subtitle_pos" r="15" theta="25"/>
      <position id="anchor_pos" r="4" phi="0"/>

      <position id="top_pos" r="1" theta="-90"/>
    </positionBase>
    
  </head>

  <body>
    <port id="port" component="christ"/>

    <!--volume 1 is equivalent to 100% and 0 to 0%-->
    <scene360 id="ipanema" src ="C:/Users/paulo/Videos/Video360_4k/Ipanema Beach.mp4" volume="0">
      <!--media types:
        image
        video
        audio
        text
        preview
        subtitle
        
        Attributes:
        follow_camera: true if media follows camera (default:false)
        start_time: time of start in seconds (default:0)
        duration: media duration in seconds (default:0)
        
        Special Attributes
        anchor: id of another video360 (if it is an anchor to another enhanced video360)
        text: for a text media
        volume: volume for video and sound (default:1)
        loop: if it plays in loop (for video and audio) (default:false)
      -->
      <image id ="webmedia" begin="3s" duration="3s" src="C:/Users/paulo/Pictures/WebMedia/31-10-2019-505.jpg" position="pos_image_sound" follow_camera="true"/>
